@model Files.Models.Review

@{
    ViewData["Title"] = "Create Review";
}

<h1>Create Review for @ViewBag.PropertyName</h1>

<div class="row">
    <div class="col-md-4">
        <!-- Form for creating a review -->
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <!-- Hidden input for PropertyId -->
            <input type="hidden" name="PropertyId" value="@ViewBag.PropertyId" />

            <!-- Validation summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Rating input -->
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <!-- TextReview input -->
            <div class="form-group">
                <label asp-for="TextReview" class="control-label"></label>
                <textarea asp-for="TextReview" class="form-control"></textarea>
                <span asp-validation-for="TextReview" class="text-danger"></span>
            </div>

            <!-- Submit button -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit Review</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-propertyId="@ViewBag.PropertyId" style="color: #CC5500; text-decoration: none;">Back to Reviews</a>
</div>

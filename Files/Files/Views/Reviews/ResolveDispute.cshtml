@model Files.Models.Review

@{
    ViewData["Title"] = "Resolve Dispute";
}

<h2>Resolve Review Dispute</h2>

<h4>Review for: @Model.Properties.Street, @Model.Properties.City</h4>

<p><strong>Rating:</strong> @Model.Rating</p>
<p><strong>Review:</strong> @Model.TextReview</p>
<p><strong>Host Comments:</strong> @Model.HostComments</p>

<h4>Dispute Status: @Model.DisputeStatus</h4>

@if (Model.DisputeStatus == StatusDispute.Disputed)
{
    <form method="post" asp-action="ResolveDispute" asp-route-id="@Model.ReviewID">
        <div>
            <label>
                <input type="radio" name="acceptDispute" value="true" /> Accept as Valid Dispute
            </label>
        </div>
        <div>
            <label>
                <input type="radio" name="acceptDispute" value="false" /> Reject as Invalid Dispute
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}
else
{
    <p>The dispute has already been resolved.</p>
}

<a asp-action="Index" class="btn btn-secondary">Back to Property Reviews</a>

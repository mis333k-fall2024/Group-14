@model Files.Models.MakeReservationViewModel

<h1>Make Reservation</h1>

<form asp-action="MakeReservation" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="CustomerId">Customer:</label>
        <select asp-for="CustomerId" class="form-control" asp-items="@(new SelectList(Model.Customers, "Id", "Email"))"></select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PropertyId">Property:</label>
        <select asp-for="PropertyId" class="form-control" asp-items="@(new SelectList(Model.Properties, "PropertyID", "Street"))"></select>
        <span asp-validation-for="PropertyId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CheckIn">Check-In Date:</label>
        <input asp-for="CheckIn" class="form-control" type="date" />
        <span asp-validation-for="CheckIn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CheckOut">Check-Out Date:</label>
        <input asp-for="CheckOut" class="form-control" type="date" />
        <span asp-validation-for="CheckOut" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumOfGuests">Number of Guests:</label>
        <input asp-for="NumOfGuests" class="form-control" type="number" />
        <span asp-validation-for="NumOfGuests" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create Reservation</button>
</form>

@model Files.Models.ReservationViewModel

@{
    ViewBag.Title = "Make Reservation";
}

<h2>Make Reservation for Customer</h2>

@Html.ValidationSummary(true)

<form asp-action="MakeReservation" method="post">
    <div class="form-group">
        <label for="CustomerId">Customer ID</label>
        <input type="text" class="form-control" asp-for="CustomerId" />
    </div>

    <div class="form-group">
        <label for="PropertyId">Property ID</label>
        <input type="text" class="form-control" asp-for="PropertyId" />
    </div>

    <div class="form-group">
        <label for="CheckIn">Check In</label>
        <input type="date" class="form-control" asp-for="CheckIn" />
    </div>

    <div class="form-group">
        <label for="CheckOut">Check Out</label>
        <input type="date" class="form-control" asp-for="CheckOut" />
    </div>

    <div class="form-group">
        <label for="NumOfGuests">Number of Guests</label>
        <input type="number" class="form-control" asp-for="NumOfGuests" />
    </div>

    <div class="form-group">
        <label for="DiscountRate">Discount Rate (%)</label>
        <input type="number" class="form-control" asp-for="DiscountRate" />
    </div>

    <button type="submit" class="btn btn-primary">Make Reservation</button>
</form>

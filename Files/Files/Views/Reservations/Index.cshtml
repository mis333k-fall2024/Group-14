@model IEnumerable<Files.Models.Reservation>

<h2>Your Reservations</h2>

@if (!Model.Any())
{
    <p>You currently have no reservations.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ConfirmationNumber</th>
                <th>Property</th>
                <th>Check-In</th>
                <th>Check-Out</th>
                <th>Guests</th>
                <th>Stay Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.Properties.Street, @reservation.Properties.City, @reservation.Properties.State</td>
                    <td>@reservation.CheckIn.ToShortDateString()</td>
                    <td>@reservation.CheckOut.ToShortDateString()</td>
                    <td>@reservation.NumOfGuests</td>
                    <td>@reservation.CalculateStayPrice().ToString("C")</td>
                    <td>
                        <form asp-action="RemoveFromCart" asp-controller="Reservations" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="reservationId" value="@reservation.ReservationID" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@model Files.Models.ReservationList

<h2>Your Reservations</h2>

@if (Model.Reservations == null || !Model.Reservations.Any())
{
    <p>Sorry, your cart is empty!</p>
    <a asp-controller="Properties" asp-action="Index" class="btn" style="background-color: #BF5700; color: white;">Add a reservation!</a>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Property</th>
                <th>Check-In</th>
                <th>Check-Out</th>
                <th>Guests</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Reservations)
            {
                <tr>
                    <td>@item.Properties.Street, @item.Properties.City</td>
                    <td>@item.CheckIn.ToShortDateString()</td>
                    <td>@item.CheckOut.ToShortDateString()</td>
                    <td>@item.NumOfGuests</td>
                    <td>@item.CalculateStayPrice().ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <p><strong>Total Price:</strong> @Model.TotalPrice.ToString("C")</p>
    <form asp-action="Confirm" asp-controller="Reservations" method="post">
        <button type="submit" class="btn btn-primary" style="background-color: #BF5700; color: white;">Confirm Reservations</button>
    </form>
}

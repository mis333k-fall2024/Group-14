@model Files.Models.SearchViewModel

@{
    ViewData["Title"] = "Search";
}

<h1>Search Properties</h1>

<form asp-action="DisplaySearchResults" asp-controller="Home" method="get">
    <p class="form-group">
        <label for="City">City:</label>
        <input name="City" id="City" class="form-control" value="@Model.City" /><br />

        <label for="State">State:</label>
        <input name="State" id="State" class="form-control" value="@Model.State" /><br />

        <label for="Category">Category:</label>
        @Html.DropDownList("SelectedCategoryID", ViewBag.AllCategories as SelectList, new { @class = "form-control" })<br />

        <label for="MinGuests">Min Guests:</label>
        <input name="MinGuests" id="MinGuests" class="form-control" type="number" value="@Model.MinGuests" /><br />

        <label for="MaxGuests">Max Guests:</label>
        <input name="MaxGuests" id="MaxGuests" class="form-control" type="number" value="@Model.MaxGuests" /><br />

        <label for="MinPrice">Min Price:</label>
        <input name="MinPrice" id="MinPrice" class="form-control" type="number" step="0.01" value="@Model.MinPrice" /><br />

        <label for="MaxPrice">Max Price:</label>
        <input name="MaxPrice" id="MaxPrice" class="form-control" type="number" step="0.01" value="@Model.MaxPrice" /><br />

        <label for="MinRating">Min Rating:</label>
        <input name="MinRating" id="MinRating" class="form-control" type="number" step="0.1" value="@Model.MinRating" /><br />

        <label for="MaxRating">Max Rating:</label>
        <input name="MaxRating" id="MaxRating" class="form-control" type="number" step="0.1" value="@Model.MaxRating" /><br />

        <label for="Bedrooms">Min Bedrooms:</label>
        <input name="MinBedrooms" id="MinBedrooms" class="form-control" type="number" value="@Model.MinBedrooms" /><br />

        <label for="Bathrooms">Min Bathrooms:</label>
        <input name="MinBathrooms" id="MinBathrooms" class="form-control" type="number" value="@Model.MinBathrooms" /><br />

        <label>
            <input name="PetsAllowed" type="checkbox" value="true" @(Model.PetsAllowed == true ? "checked" : "") />
            Pets Allowed
        </label><br />

        <label>
            <input name="FreeParking" type="checkbox" value="true" @(Model.FreeParking == true ? "checked" : "") />
            Free Parking
        </label><br />

        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-action="Search" class="btn btn-danger">Reset</a>
    </p>
</form>
@model Files.Models.SearchViewModel

@{
    ViewData["Title"] = "Search";
}

<h1>Search Properties</h1>

<form asp-action="DisplaySearchResults" asp-controller="Home" method="get">
    <div class="mb-3">
        <label for="City">City:</label>
        <input name="City" id="City" class="form-control" value="@Model.City" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="State">State:</label>
        <input name="State" id="State" class="form-control" value="@Model.State" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Category">Category:</label>
        @Html.DropDownList("SelectedCategoryID", ViewBag.AllCategories as SelectList, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        <label>Guests:</label>
        <div class="form-check form-check-inline">
            <input type="radio" name="GuestComparison" value="GreaterThan" class="form-check-input" @(Model.GuestComparison == ComparisonType.GreaterThan ? "checked" : "") />
            <label class="form-check-label">Greater Than</label>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" name="GuestComparison" value="LessThan" class="form-check-input" @(Model.GuestComparison == ComparisonType.LessThan ? "checked" : "") />
            <label class="form-check-label">Less Than</label>
        </div>
        <input name="GuestValue" id="GuestValue" class="form-control mt-2" type="number" min="0" value="@Model.GuestValue" />
        <span asp-validation-for="GuestValue" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Price:</label>
        <div class="form-check form-check-inline">
            <input type="radio" name="PriceComparison" value="GreaterThan" class="form-check-input" @(Model.PriceComparison == ComparisonType.GreaterThan ? "checked" : "") />
            <label class="form-check-label">Greater Than</label>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" name="PriceComparison" value="LessThan" class="form-check-input" @(Model.PriceComparison == ComparisonType.LessThan ? "checked" : "") />
            <label class="form-check-label">Less Than</label>
        </div>
        <input name="PriceValue" id="PriceValue" class="form-control mt-2" type="number" min="0" step="0.01" value="@Model.PriceValue" />
        <span asp-validation-for="PriceValue" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Bedrooms:</label>
        <div class="form-check form-check-inline">
            <input type="radio" name="BedroomComparison" value="GreaterThan" class="form-check-input" @(Model.BedroomComparison == ComparisonType.GreaterThan ? "checked" : "") />
            <label class="form-check-label">Greater Than</label>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" name="BedroomComparison" value="LessThan" class="form-check-input" @(Model.BedroomComparison == ComparisonType.LessThan ? "checked" : "") />
            <label class="form-check-label">Less Than</label>
        </div>
        <input name="BedroomValue" id="BedroomValue" class="form-control mt-2" type="number" min="0" value="@Model.BedroomValue" />
        <span asp-validation-for="BedroomValue" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Bathrooms:</label>
        <div class="form-check form-check-inline">
            <input type="radio" name="BathroomComparison" value="GreaterThan" class="form-check-input" @(Model.BathroomComparison == ComparisonType.GreaterThan ? "checked" : "") />
            <label class="form-check-label">Greater Than</label>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" name="BathroomComparison" value="LessThan" class="form-check-input" @(Model.BathroomComparison == ComparisonType.LessThan ? "checked" : "") />
            <label class="form-check-label">Less Than</label>
        </div>
        <input name="BathroomValue" id="BathroomValue" class="form-control mt-2" type="number" min="0" value="@Model.BathroomValue" />
        <span asp-validation-for="BathroomValue" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="CheckInDate">Check-In Date:</label>
        <input name="CheckInDate" id="CheckInDate" class="form-control" type="date" value="@Model.CheckInDate?.ToString("yyyy-MM-dd")" />
    </div>

    <div class="mb-3">
        <label for="CheckOutDate">Check-Out Date:</label>
        <input name="CheckOutDate" id="CheckOutDate" class="form-control" type="date" value="@Model.CheckOutDate?.ToString("yyyy-MM-dd")" />
    </div>

    <div class="mb-3">
        <label for="RatingComparison">Rating:</label>
        <div class="form-check form-check-inline">
            <input type="radio" id="GreaterThan" name="RatingComparison" value="GreaterThan" class="form-check-input" @(Model.RatingComparison == ComparisonType.GreaterThan ? "checked" : "") />
            <label class="form-check-label" for="GreaterThan">Greater Than</label>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" id="LessThan" name="RatingComparison" value="LessThan" class="form-check-input" @(Model.RatingComparison == ComparisonType.LessThan ? "checked" : "") />
            <label class="form-check-label" for="LessThan">Less Than</label>
        </div>
        <input name="RatingValue" id="RatingValue" class="form-control mt-2" type="number" step="0.1" min="1" max="5" value="@Model.RatingValue" />
        <span asp-validation-for="RatingValue" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input name="PetsAllowed" type="checkbox" value="true" class="form-check-input" @(Model.PetsAllowed == true ? "checked" : "") />
        <label class="form-check-label">Pets Allowed</label>
    </div>

    <div class="mb-3 form-check">
        <input name="FreeParking" type="checkbox" value="true" class="form-check-input" @(Model.FreeParking == true ? "checked" : "") />
        <label class="form-check-label">Free Parking</label>
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-action="Search" class="btn btn-danger">Reset</a>
</form>

@model Files.Models.AdminReportViewModel

<h1>Admin Reports</h1>

<form method="get" asp-action="AdminReports">
    <div class="form-group">
        <label for="StartDate">Start Date:</label>
        <input type="date" name="StartDate" id="StartDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label for="EndDate">End Date:</label>
        <input type="date" name="EndDate" id="EndDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
    </div>
    <button type="submit" class="btn btn-primary">Generate Report</button>
</form>

@if (Model.Report != null)
{
    <table class="table table-bordered mt-4">
        <thead>
            <tr>
                <th>Total Commission Earned</th>
                <th>Total Number of Reservations</th>
                <th>Average Commission Per Reservation</th>
                <th>Total Number of Properties</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Report.TotalCommissionEarned.ToString("C")</td>
                <td>@Model.Report.TotalNumberOfReservations</td>
                <td>@Model.Report.AverageCommissionPerReservation.ToString("C")</td>
                <td>@Model.Report.TotalNumberOfProperties</td>
            </tr>
        </tbody>
    </table>
}
else
{
    <p>No data available for the selected date range.</p>
}



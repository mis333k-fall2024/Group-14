    @if (User.IsInRole("Customer"))
    {
        <form asp-action="AddToCart" asp-controller="Reservations" method="post" onsubmit="return validateForm()">
            <input type="hidden" name="propertyId" value="@Model.PropertyID" />
            <div class="form-group">
                <label for="checkIn">Check-In Date</label>
                <input type="date" id="checkIn" name="checkIn" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="checkOut">Check-Out Date</label>
                <input type="date" id="checkOut" name="checkOut" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Add to Cart</button>
        </form>
    }
</div>

<script>function validateForm() {
        const checkInInput = document.getElementById('checkIn').value;
        const checkOutInput = document.getElementById('checkOut').value;
        const today = new Date().toISOString().split('T')[0]; // Get today's date in yyyy-MM-dd format

        if (!checkInInput || !checkOutInput) {
            alert('Both Check-In and Check-Out dates are required.');
            return false;
        }

        if (checkInInput <= today) {
            alert('Check-In date must be after today');
            return false;
        }

        if (checkOutInput <= checkInInput) {
            alert('Check-Out date must be after the Check-In date.');
            return false;
        }

        return true; // Allow the form to submit
    }</script>

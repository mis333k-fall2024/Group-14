@model string

@{
    ViewBag.Title = "Fire Admin";
}

<h2>@ViewBag.Title</h2>

<p>Are you sure you want to fire the admin with ID: <strong>@Model</strong>?</p>

<form method="post" asp-action="FireAdmin" asp-route-id="@Model">
    <button type="submit" class="btn btn-danger">Fire Admin</button>
    <a asp-action="Index" class="btn btn-warning">Cancel</a>
</form>

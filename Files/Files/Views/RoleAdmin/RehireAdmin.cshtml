@model string

@{
    ViewBag.Title = "Rehire Admin";
}

<h2>@ViewBag.Title</h2>

<p>Are you sure you want to rehire the admin with ID: <strong>@Model</strong>?</p>

<form method="post" asp-action="RehireAdmin" asp-route-id="@Model">
    <button type="submit" class="btn btn-success">Rehire Admin</button>
    <a asp-action="Index" class="btn btn-warning">Cancel</a>
</form>
